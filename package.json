{
  "name": "eslint-ts-patch",
  "type": "commonjs",
  "version": "8.57.0-0",
  "packageManager": "pnpm@8.15.8",
  "description": "Support eslint.config.mjs and eslint.config.ts for ESLint",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/eslint-ts-patch#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/eslint-ts-patch.git"
  },
  "bugs": "https://github.com/antfu/eslint-ts-patch/issues",
  "keywords": [
    "eslint"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./lib/api.js",
    "./register": "./lib/register.js",
    "./use-at-your-own-risk": "./lib/unsupported-api.js"
  },
  "main": "./lib/api.js",
  "bin": {
    "eslint": "./bin/eslint.js",
    "eslint-ts": "./bin/eslint.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "lint": "eslint-ts .",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "bundle-require": "^4.1.0",
    "tsx": "^4.9.3"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "eslint": "^9.2.0",
    "jiti": "^1.21.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.16.3",
    "@antfu/ni": "^0.21.12",
    "@types/eslint": "^8.56.10",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.11",
    "bumpp": "^9.4.1",
    "bundle-require": "^4.1.0",
    "eslint-ts-patch": "workspace:*",
    "esno": "^4.7.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^8.15.8",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint-ts --fix"
  }
}
