{
  "name": "eslint-ts-patch",
  "type": "commonjs",
  "version": "0.0.3",
  "packageManager": "pnpm@8.11.0",
  "description": "Support eslint.config.mjs and eslint.config.ts for ESLint",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/eslint-ts-patch#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/eslint-ts-patch.git"
  },
  "bugs": "https://github.com/antfu/eslint-ts-patch/issues",
  "keywords": [
    "eslint"
  ],
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": "./lib/api.js",
    "./register": "./lib/register.js",
    "./use-at-your-own-risk": "./lib/unsupported-api.js"
  },
  "main": "./lib/api.js",
  "bin": {
    "eslint": "./bin/eslint.js",
    "eslint-ts": "./bin/eslint.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint-ts .",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "eslint": "^8.55.0",
    "jiti": "^1.21.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.0",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.6",
    "@types/eslint": "^8.44.8",
    "@types/node": "^20.10.4",
    "bumpp": "^9.2.0",
    "eslint": "^8.55.0",
    "eslint-ts-patch": "workspace:*",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.0",
    "pnpm": "^8.11.0",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite": "^5.0.6",
    "vitest": "^1.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint-ts --fix"
  }
}
